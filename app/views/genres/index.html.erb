<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2
                col-xs-10 col-xs-offset-1">
      <h1 class="index-title">Genres</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to 'Show', genre, class: 'btn btn-xs btn-default' %></td>
              <td><%= link_to 'Edit', edit_genre_path(genre), class: 'btn btn-xs btn-default' %></td>
              <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <div class="form-button">
        <%= link_to 'New Genre', new_genre_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

