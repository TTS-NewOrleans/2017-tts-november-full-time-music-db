<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @genre.name %> Artists:</h1>

      <ul>
        <% @genre.artists.order('name').each do |artist| %>
          <li><%= link_to artist.name, artist_path(artist) %></li>
        <% end %>
      </ul>

      <%= link_to 'Edit', edit_genre_path(@genre), class: 'btn btn-default' %>
      <%= link_to 'Back', genres_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>

