<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3
                col-sm-8 col-sm-offset-2
                col-xs-10 col-xs-offset-1">
      <h1 class="text-center"><%= @genre.name %> Artists:</h1>

      <div class="well text-left">
        <ul>
          <% @genre.artists.order('name').each do |artist| %>
            <li><h4><%= link_to artist.name, artist_path(artist) %></h4></li>
          <% end %>
        </ul>
      </div>

      <div class="form-button">
        <%= link_to 'Edit', edit_genre_path(@genre), class: 'btn btn-default' %>
        <%= link_to 'Back', genres_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

