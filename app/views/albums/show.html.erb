<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3
                col-sm-8 col-sm-offset-2
                col-xs-10 col-xs-offset-1">
      <h1 class="text-center"><%= @album.name %></h1>
      <h3 class="text-center">by <%= link_to @album.artist.try(:name), artist_path(@album.artist) %></h3>

      <div class="well">
        <ol>
          <% @album.songs.each do |track| %>
            <li><%= link_to track.name, song_path(track) %></li>
          <% end %>
        </ol>
      </div>

      <div class="form-button">
        <%= link_to 'Edit', edit_album_path(@album), class: 'btn btn-default' %>
        <%= link_to 'Back', albums_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
