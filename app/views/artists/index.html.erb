<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2
                col-xs-10 col-xs-offset-1">
      <h1 class="index-title">Artists</h1>

      <div class="form-button text-right">
        <%= link_to 'New Artist', new_artist_path, class: 'btn btn-default' %>
      </div>
      <br>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Genre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @artists.each do |artist| %>
            <tr>
              <td><%= artist.name %></td>
              <td><%= link_to artist.genre.name, genre_path(artist.genre) %></td>
              <td><%= link_to 'Show', artist, class: 'btn btn-xs btn-default' %></td>
              <td><%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-xs btn-default' %></td>
              <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


