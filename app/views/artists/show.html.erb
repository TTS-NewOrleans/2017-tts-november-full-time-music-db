<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3
                col-sm-8 col-sm-offset-2
                col-xs-10 col-xs-offset-1">
      <h1>
        <%= @artist.name %>
      </h1>

      <p>
        <strong>Genre:</strong>
        <%= link_to @artist.genre.name, genre_path(@artist.genre) %>
      </p>

      <p>
        <strong>Bio:</strong>
        <p><em><%= @artist.bio %></em></p>
      </p>

      <div class="well">
        <h3 class="well-title">Albums:</h3>
        <ul>
          <% @artist.albums.order('name').each do |disc| %>
            <div class="panel">
              <li><h4 class="text-center"><%= link_to disc.name, album_path(disc) %></h4></li>
              <hr>
              <ol>
                <% disc.songs.each do |track| %>
                  <li><%= link_to track.name, song_path(track) %></li>
                <% end %>
              </ol>
            </div>
          <% end %>
        </ul>
      </div>

      <div class="form-button">
        <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-default' %>
        <%= link_to 'Back', artists_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

