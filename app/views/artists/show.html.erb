<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3
                col-sm-8 col-sm-offset-2
                col-xs-10 col-xs-offset-1">
      <h1>
        <%= @artist.name %>
      </h1>

      <p>
        <strong>Genre:</strong>
        <%= link_to @artist.genre.name, genre_path(@artist.genre) %>
      </p>
      <div class="well">
        <h3 class="well-title">Songs:</h3>
        <ul>
          <% @artist.songs.order('name').each do |ditty| %>
            <li><%= link_to ditty.name, song_path(ditty) %></li>
          <% end %>
        </ul>
      </div>

      <div class="form-button">
        <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-default' %>
        <%= link_to 'Back', artists_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

